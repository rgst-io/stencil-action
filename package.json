{
  "name": "stencil-action",
  "description": "GitHub Actions for interacting with stencil",
  "version": "v1.0.0",
  "author": "Jared Allard <jaredallard@users.noreply.github.com>",
  "type": "module",
  "private": true,
  "homepage": "https://github.com/jaredallard/stencil-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaredallard/stencil-action.git"
  },
  "bugs": {
    "url": "https://github.com/jaredallard/stencil-action/issues"
  },
  "keywords": [
    "actions",
    "stencil"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 npx jest",
    "coverage": "make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "package": "rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "package:watch": "npm run package -- --watch",
    "test": "npm run ci-test",
    "ci-test-local": "gh act --platform ubuntu-latest=ghcr.io/catthehacker/ubuntu:full-24.04 --job test-action --secret GITHUB_TOKEN=$(gh auth token)",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "@actions/io": "^1.1.3"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.2",
    "@github/local-action": "^5.1.0",
    "@jest/globals": "^30.0.5",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.0.5",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.6.2",
    "prettier-eslint": "^16.4.2",
    "rollup": "^4.46.2",
    "ts-jest": "^29.4.1",
    "ts-jest-resolver": "^2.0.1",
    "typescript": "^5.9.2"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  }
}
